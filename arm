#include <Servo.h>  // مكتبة التحكم بالسيرفو

Servo arm;  // تعريف السيرفو باسم "arm"

void setup() {
  arm.attach(9);        // ربط السيرفو بالمنفذ رقم 9
}

void loop() {
  // 1️⃣ الذراع للأسفل (جاهز لرفع القطعة)
  arm.write(0);          // زاوية 0° = الذراع للأسفل
  delay(1000);           // انتظر ثانية واحدة

  // 2️⃣ رفع القطعة
  arm.write(90);         // زاوية 90° = الذراع يرفع القطعة
  delay(1500);           // انتظر ثانية ونصف حتى يرتفع بالكامل

  // 3️⃣ إبقاء الذراع في الأعلى لحظة
  arm.write(90);         // الذراع يبقى مرتفع
  delay(1000);           // ثانية واحدة

  // 4️⃣ إعادة الذراع للأسفل بعد رفع القطعة
  arm.write(0);          // العودة للأسفل
  delay(1000);           // ثانية واحدة
}
